@{
    //load file _Layout.cshtml vao day
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@using tony_compurter.Models
@using System.Data
@using tony_compurter.Areas.Admin.Class
@functions{
    DataContext db = new DataContext();
}
<div class="col-md-12">
    <div style="margin-bottom:5px;">
        <a href="/Admin/Products/CreateImage?product_id=@ViewBag.product_id" class="btn btn-primary">Create Image</a>
    </div>
    <div class="panel panel-primary">
        <div class="panel-heading">List Images</div>
        <div class="panel-body">
            <table class="table table-bordered table-hover">
                <tr>
                    <th style="width:100px;">Image</th>
                    <th></th>
                    <th style="width:150px;"></th>
                </tr>
                @foreach (DataRow item in Model.Rows)
                {
                    <tr>
                        <td>
                            <img src="~/Assets/Upload/ProductsImages/@item["photo"]" style="width:100px;" />
                        </td>
                        <td></td>
                        <td style="text-align:center;">
                            <a href="/Admin/Products/DeleteImage/@item["id"]?product_id=@ViewBag.product_id" onclick="return window.confirm('Are you sure?');">Delete</a>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>



